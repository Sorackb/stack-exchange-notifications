{
    "name": "StackExchangeNotifications",
    "version": "0.1.4",
    "manifest_version": 2,
    "description": "Show recent achievements and inbox messages from StackExchange",
    "icons": {
        "128": "images/icon-128px.png",
        "48":  "images/icon-48px.png",
        "32":  "images/icon-32px.png",
        "16":  "images/icon.png"
    },
    "browser_action": {
        "default_icon":  "images/icon.png",
        "default_popup": "view/popup.html"
    },
    "background": {
        "scripts": [
            "js/stackexchangenotifications.js",
            "js/background.js"
        ]
    },
    "content_scripts": [{
        "matches": [
            "*://stackapps.com/*",
            "*://askubuntu.com/*",
            "*://superuser.com/*",
            "*://superuser.com/*",
            "*://serverfault.com/*",
            "*://mathoverflow.com/*",
            "*://stackoverflow.com/*",
            "*://stackexchange.com/*",

            "*://*.stackapps.com/*",
            "*://*.askubuntu.com/*",
            "*://*.superuser.com/*",
            "*://*.superuser.com/*",
            "*://*.serverfault.com/*",
            "*://*.mathoverflow.com/*",
            "*://*.stackoverflow.com/*",
            "*://*.stackexchange.com/*"
        ],
        "js": [
            "js/detectchanges.js",
            "js/gallery.js",
            "js/editor.js"
        ]
    }, {
        "matches": [
            "<all_urls>"
        ],
        "js": [
            "js/detectuseractivity.js"
        ]
    }],
    "web_accessible_resources": [
        "view/editor.html",
        "css/editor.css",
        "view/gallery.html",
        "css/gallery.css",
        "css/animate.css",
        "images/*"
    ],
    "permissions": [
        "*://stackexchange.com/*",
        "notifications"
    ]
}
