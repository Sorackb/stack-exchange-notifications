{
    "name": "StackExchangeNotifications",
    "version": "0.0.7",
    "manifest_version": 2,
    "description": "Show new score and inbox messages from StackExchange",
    "browser_action": {
        "default_icon": "images/icon.png",
        "default_popup": "popup.html"
    },
    "background": {
        "scripts": [
            "stackexchangenotifications.js",
            "background.js"
        ]
    },
    "icons": {
        "128": "images/icon-128px.png",
        "48":  "images/icon-48px.png",
        "32":  "images/icon-32px.png",
        "16":  "images/icon.png"
    },
    "permissions": [
        "https://stackexchange.com/*",
        "http://stackexchange.com/*",
        "notifications"
    ]
}
